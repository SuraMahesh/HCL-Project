{
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "plugins": ["react"],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "react/jsx-filename-extension": [1, { "extensions": [".ts", ".tsx"] }],
      "no-unused-vars": "error",
      "no-unused-expressions": "error",
      "quotes": ["error", "double"],
      "react/jsx-uses-vars": "error",
      "react/jsx-uses-react": "error"
    }
  }